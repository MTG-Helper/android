<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"

            android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Contadores de vidas"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Vidas Restantes"
                    android:id="@+id/textView2"
                    android:layout_marginTop="0dp" />
                <TextView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:id="@+id/p1life"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:text="@string/upone"
                    android:id="@+id/button"
                    android:onClick="incP1" />
                <Button
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:text="@string/downone"
                    android:onClick="decP1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Venenos"
                    android:id="@+id/venenos1"
                    android:layout_marginTop="0dp" />
                <TextView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:id="@+id/p1venom"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Venenos"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:text="@string/upone"
                    android:onClick="incVenonP1"
                    android:id="@+id/button6" />
                <Button
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:text="@string/downone"
                    android:onClick="decVenonP1"
                    android:id="@+id/button8"/>
            </LinearLayout>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/nav_header_height"
                android:layout_height="wrap_content"
                android:text="REINICIAR"
                android:onClick="reiniciar"
                android:layout_gravity="center_horizontal"
                android:id="@+id/button5" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Vidas Restantes"
                    android:id="@+id/textView3" />
                <TextView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:id="@+id/p2life"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    android:text="@string/upone"
                    android:onClick="incP2" />
                <Button
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    android:text="@string/downone"
                    android:onClick="decP2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Venenos"
                    android:id="@+id/venenos2"
                    android:layout_marginTop="0dp" />
                <TextView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:id="@+id/p2venom"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:text="@string/upone"
                    android:onClick="incVenonP2"
                    android:id="@+id/button9" />
                <Button
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="wrap_content"
                    android:text="@string/downone"
                    android:onClick="decVenonP2"
                    android:id="@+id/button10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Coin"
                    android:onClick="coin"
                    android:id="@+id/coinButton" />
                <Button
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="70dp"
                    android:text="Search"
                    android:onClick="search"
                    android:id="@+id/searchButton" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Dice"
                    android:onClick="dice"
                    android:id="@+id/diceButton" />

            </LinearLayout>

        </LinearLayout>
</LinearLayout>

